# MongoDB Configuration
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env file to version control

# MongoDB credentials (used by Docker Compose)
MONGO_INITDB_ROOT_USERNAME=mongouser
MONGO_INITDB_ROOT_PASSWORD=your_secure_password_here

# MongoDB connection URI (used by application)
# For Docker environment: use hostname 'mongodb'
# For local development: use hostname 'localhost'
MONGODB_URI=mongodb://mongouser:your_secure_password_here@localhost:27017/?authSource=admin
MONGODB_DB=hcen_db

# Examples:
# Docker (inside container network):
#   MONGODB_URI=mongodb://mongouser:yourpassword@mongodb:27017/?authSource=admin
# Local (connecting from host machine):
#   MONGODB_URI=mongodb://mongouser:yourpassword@localhost:27017/?authSource=admin
