<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence 
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="politicasPersistenceUnit" transaction-type="JTA">
        <!-- Use PoliticasDS datasource with PostgreSQL -->
        <jta-data-source>java:jboss/datasources/PoliticasDS</jta-data-source>
        
        <!-- Entidades JPA del microservicio de Políticas -->
        <class>uy.edu.tse.hcen.politicas.model.PoliticaAcceso</class>
        <class>uy.edu.tse.hcen.politicas.model.SolicitudAcceso</class>
        <class>uy.edu.tse.hcen.politicas.model.RegistroAcceso</class>
        
        <properties>
            <!-- Enable schema generation for development. Updates schema automatically on deployment.
                 Creates tables if they don't exist, updates them if they do.
                 For production, disable this and use database migrations (Flyway/Liquibase) instead. -->
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
            
            <!-- Configuración de Hibernate para PostgreSQL -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            
            <!-- Configuración de conexión -->
            <property name="hibernate.jdbc.batch_size" value="20"/>
            <property name="hibernate.jdbc.fetch_size" value="50"/>
            <property name="hibernate.connection.pool_size" value="10"/>
            
            <!-- Logging -->
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.generate_statistics" value="false"/>
        </properties>
    </persistence-unit>
</persistence>



