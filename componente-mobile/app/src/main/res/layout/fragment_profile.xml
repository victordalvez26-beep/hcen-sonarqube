        <include
            android:id="@+id/sectionHelp"
            layout="@layout/item_profile_section" />

        <include
            android:id="@+id/sectionSettings"
            layout="@layout/item_profile_section" />

        <include
            android:id="@+id/sectionHCEN"
            layout="@layout/item_profile_section" />

