<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HCEN" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/indigo_dye</item>
        <item name="colorPrimaryVariant">@color/moonstone</item>
        <item name="colorSecondary">@color/moonstone</item>
        <item name="colorSecondaryVariant">@color/mint_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowBackground">@color/columbia_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorLink">@color/picton_blue</item>
        <item name="android:fontFamily">@font/tt_interphases_pro_regular</item>
        <item name="fontFamily">@font/tt_interphases_pro_regular</item>

        <!-- Ajustes para que la app se dibuje debajo de la barra de estado -->
        <item name="android:statusBarColor">@color/indigo_dye</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
</resources>